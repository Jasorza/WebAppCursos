@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";

}

<h1> @ViewData["Title"] | <small class="text-muted">Crear nueva cuenta</small></h1>
<br/>

<div class="row">
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-group-lg">
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.Email" class="form-control" />
                    <span class="badge badge-pill badge-danger" asp-validation-for="Input.Email"></span>
                </div>
            </div>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="badge badge-danger"></span>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="badge badge-danger"></span>
                </div>
            </div>
            <hr />
            <br />
            <br />
            <br />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Registrarse</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
